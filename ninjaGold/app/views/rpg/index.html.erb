<div>
    <h2> Your Gold: </h2>
    <h2> <%= @gold %> </h2>

</div>

<div id="middle">

    <div class="arena">
        <h4>Farm</h4>
        <p>(earn 10-20 golds)
        <form action="/rpg/farm" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <input type="submit" value="Earn Gold!" />
        </form>
    </div>

    <div class="arena">
        <h4>Cave</h4>
        <p>(earn 5-10 golds)</p>
        <form action="/rpg/cave" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <input type="submit" value="Earn Gold!" />
        </form>
    </div>

    <div class="arena">
        <h4>House</h4>
        <p>(earn 2-5 golds)</p>
        <form action="/rpg/house" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <input type="submit" value="Earn Gold!" />
        </form>
    </div>

    <div class="arena">
        <h4>Casino</h4>
        <p>(earn/lose 0-50 golds)</p>
        <form action="/rpg/casino" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <input type="submit" value="Earn/Lose Gold!" />
        </form>
    </div>

</div>

<div id="activities">
    <h4>Activities: </h4>
    <div id="log">
        <% @activities.each do |activity| %>
            <% if activity.include?('lost') %>
                <p class ='red'><%= activity %></p>
            <% else %>
                <p class ='green'><%= activity %></p>
            <% end %>
        <% end %>
    </div>
</div>