<h1>
<p>Editing <%= @student.first_name %> <%= @student.last_name %></p>
</h1>


<form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="POST">
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <p><input type="text" name="student[first_name]" value="<%= @student.first_name %>" /></p>

    <p><input type="text" name="student[last_name]" value="<%= @student.last_name %>" /></p>

    <p><input type="text" name="student[email]" value="<%= @student.email %>" /></<p>

    <p><select name="student[dojo_id]">
        <% @dojos.each do |dojo| %>
        <option value="<%= dojo.id %>"> <%= dojo.branch %> </option>
    <% end %>
    </p>

    <p>
    <input type="submit" value="Edit student">
    <input type="hidden" name="_method" value="patch">
    </p>
</form>

