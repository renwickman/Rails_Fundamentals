<% content_for :middle_column do %>

<h1>New Post</h1>

<form action="" method="POST">
<h3><label for="title">Title</label></h3>
<p>
<input type="text" name="title"></p>
<br>
<h3><label for="comment">Content</label></h3>
<p>
<input type="text" name="content"></p>
<br>
<h3><label for="author">Author</label></h3>
<p>
<select name="user">
        <% @users.each do |author| %>
        <option value="<%= post.id %>"> <%= author.first_name %> <%= author.last_name %></option>
    <% end %></p>

<button type="button" class="btn btn-primary">Submit</button>

</form>

<% end %>
